{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "noImplicitReturns": true,
        "outDir": "dist",
        "rootDir": "./src",
        // "rootDir": ".",
        // "baseUrl": ".",
        // "paths": {
        //     "@routes/*": ["src/routes/*"],
        //     "@controllers/*": ["src/controllers/*"],
        //     "@middleware/*": ["src/middleware/*"],
        //     "@schemas/*": ["src/schemas/*"],
        //     "@services/*": ["src/services/*"],
        //     "@config/*": ["src/config/*"],
        //     "@utils/*": ["src/utils/*"],
        //     "@prisma/client-c": ["node_modules/@prisma/client/index"]
        // }
    },
    "include": ["./src/**/*"], //  include is used in order to specify what files tsc should compile
    "exclude": ["node_modules"]
}
