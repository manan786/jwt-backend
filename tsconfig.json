{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "noImplicitReturns": true,
        "outDir": "dist",
        "rootDir": "./src",
        // "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        }
    },
    "include": ["./src/**/*"], //  include is used in order to specify what files tsc should compile
    "exclude": ["node_modules"]
}
